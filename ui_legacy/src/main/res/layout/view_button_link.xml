<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/buttonlist_row_padding"
    android:paddingTop="@dimen/buttonlist_row_padding">

    <!-- Note: The android:background attribute is required to make the Ripple effect for those views that has registered an OnClickListener -->

    <ImageView
        android:id="@+id/buttonlist_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginEnd="@dimen/buttonlist_row_horizontal_margin"
        android:layout_marginRight="@dimen/buttonlist_row_horizontal_margin"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/buttonlist_disclosure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/buttonlist_row_horizontal_margin"
        android:layout_marginStart="@dimen/buttonlist_row_horizontal_margin"
        android:src="@drawable/atv_disclosure"
        android:visibility="gone" />

</LinearLayout>