<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/listing_background_white"
    android:clickable="false"
    android:focusable="false"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <com.mercadolibre.android.ui.legacy.widgets.image.MLImageView
        android:id="@+id/row_item_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:gravity="center" />

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/row_item_image" >

        <TextView
            android:id="@+id/row_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left|top"
            android:maxLines="2"
            android:text="Apple Ipod Touch 32 Gb 4ta Generacion Filma Hd Envio Gratis Apple Ipod Touch 32 Gb 4ta Generacion Filma Hd Envio Gratis"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_item_title"
            android:layout_marginTop="2dp"
            android:gravity="left|top"
            android:maxLines="1"
            android:text="U$S 1000.000"
            android:textColor="@color/red_dark"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>