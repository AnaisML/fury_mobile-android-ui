<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/buttons_title"
            style="@style/textview_congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Buttons: "
            android:textStyle="bold" />


        <TextView
            android:id="@+id/buttons_primario_text"
            style="@style/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Primario" />

        <Button
            android:id="@+id/buttton_primario"
            style="@style/MLButton.Primary"
            android:text="Normal" />

        <Button
            android:id="@+id/buttton_primario_disabled"
            style="@style/MLButton.Primary"
            android:enabled="false"
            android:text="Disabled"></Button>

        <TextView
            android:id="@+id/buttons_secundario_text"
            style="@style/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secundario" />

        <Button
            android:id="@+id/buttton_secundario"
            style="@style/MLButton.Secondary"
            android:text="Normal" />

        <Button
            style="@style/MLButton.Secondary"
            android:layout_below="@+id/buttton_secundario_focus"
            android:enabled="false"
            android:text="Disabled" />


        <TextView
            android:id="@+id/buttons_terciario_text"
            style="@style/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terciario" />

        <Button
            android:id="@+id/buttton_terciario"
            style="@style/MLButton.Tertiary"
            android:layout_below="@+id/buttons_terciario_text"
            android:text="Normal" />

        <Button
            style="@style/MLButton.Tertiary"
            android:layout_below="@+id/buttton_terciario_focus"
            android:enabled="false"
            android:text="Disabled" />


        <TextView
            style="@style/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="          -------------------------------------------    " />

        <TextView
            style="@style/textview_congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="TextViews: "
            android:textStyle="bold" />

        <TextView
            style="@style/textview_congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Congrats / Big messages " />

        <TextView
            style="@style/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Title " />

        <TextView
            style="@style/textview_vip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Title vip " />

        <TextView
            style="@style/textview_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Title search" />

        <TextView
            style="@style/textview_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Vip Price" />

        <TextView
            style="@style/textview_vip_installments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Vip Installments" />

        <TextView
            style="@style/textview_vip_freeshipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Vip Free shipping" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center_horizontal|center_vertical">

            <ProgressBar
                android:id="@+id/list_progress_bar"
                style="@style/Widget.MercadoLibre.ProgressBar.Horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:indeterminate="true"
                android:indeterminateOnly="true" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_search_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                android:text="EditText with focus: " />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/textview_search_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".5"
                android:text="EditText without focus: " />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>