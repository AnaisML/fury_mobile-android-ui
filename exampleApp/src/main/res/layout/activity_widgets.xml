<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".legacy.MainLegacyActivity">

        <Button
            android:id="@+id/ml_image_pager"
            style="@style/MLButton.Secondary"
            android:text="MLImagePager" />

        <Button
            android:id="@+id/atableview_button"
            style="@style/MLButton.Primary"
            android:text="ATableView" />

        <Button
            style="@style/MLButton.Primary"
            android:onClick="goToOfficialStoreBanner"
            android:text="Banner/Official Store" />

    </LinearLayout>

</ScrollView>
