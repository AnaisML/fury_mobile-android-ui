<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mercadolibre.android.ui.example.ui.widgets.MaterialButtonsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.mercadolibre.android.ui.example.ui.widgets.MaterialButtonsActivity"
        tools:ignore="HardcodedText"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <android.support.design.button.MaterialButton
            android:id="@+id/action_enabled_button"
            style="@style/Material.Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary action button enabled"
            app:icon="@drawable/ic_badge" />

        <android.support.design.button.MaterialButton
            android:id="@+id/action_disabled_button"
            style="@style/Material.Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Primary action button disabled"
            app:icon="@drawable/ic_badge"/>

        <android.support.design.button.MaterialButton
            android:id="@+id/secondary_action_enabled_button"
            style="@style/Material.Button.Action.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary action button disabled"
            app:icon="@drawable/ic_badge"
            />

        <android.support.design.button.MaterialButton
            android:id="@+id/secondary_action_disabled_button"
            style="@style/Material.Button.Action.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary action button disabled"
            app:icon="@drawable/ic_badge"
            android:enabled="false"
            />

        <android.support.design.button.MaterialButton
            android:id="@+id/action_enabled_button_right"
            style="@style/Material.Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary action button enabled"
            app:icon="@drawable/ic_badge"
            android:layoutDirection="rtl"/>

        <android.support.design.button.MaterialButton
            android:id="@+id/action_disabled_button_right"
            style="@style/Material.Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Primary action button disabled"
            app:icon="@drawable/ic_badge"
            android:layoutDirection="rtl"/>

        <android.support.design.button.MaterialButton
            android:id="@+id/secondary_action_enabled_button_right"
            style="@style/Material.Button.Action.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary action button disabled"
            app:icon="@drawable/ic_badge"
            android:layoutDirection="rtl"
            />

        <android.support.design.button.MaterialButton
            android:id="@+id/secondary_action_disabled_button_right"
            style="@style/Material.Button.Action.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary action button disabled"
            app:icon="@drawable/ic_badge"
            android:enabled="false"
            android:layoutDirection="rtl"
            />

    </LinearLayout>
</ScrollView>