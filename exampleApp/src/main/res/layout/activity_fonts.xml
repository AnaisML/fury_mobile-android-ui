<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.mercadolibre.android.ui.example.ui.fonts.FontsActivity"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The following texts are all code created"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/ui_example_app_code_created_views_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The following texts are all set by XML using the textAppearance"
            android:textSize="20sp"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this component should have a Black font"
            android:textAppearance="@style/MLFont.Black"
            android:textSize="15sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this component should have a Bold font"
            android:textAppearance="@style/MLFont.Bold"
            android:textSize="15sp" />

        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this component should have a Regular font"
            android:textAppearance="@style/MLFont.Regular"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this component should have a ExtraBold font"
            android:textAppearance="@style/MLFont.Bold.Extra"
            android:textSize="15sp" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this component should have a SemiBold font"
            android:textAppearance="@style/MLFont.Bold.Semi"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this component should have a Light font"
            android:textAppearance="@style/MLFont.Light"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this component should have a Thin font"
            android:textAppearance="@style/MLFont.Thin"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="this component should have a Medium font"
            android:textAppearance="@style/MLFont.Medium"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>