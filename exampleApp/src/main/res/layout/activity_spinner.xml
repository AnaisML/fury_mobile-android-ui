<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="showBigYellowSpinner"
            android:text="Big blue-yellow" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="showBigWhiteSpinner"
            android:text="Big blue-white" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="showSmallBlueSpinner"
            android:text="Small blue" />

        <Button
            style="@style/Button.Action.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="showSmallWhiteSpinner"
            android:text="Small white" />

        <RelativeLayout
            android:id="@+id/spinner_frame"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical" />

    </LinearLayout>
</ScrollView>